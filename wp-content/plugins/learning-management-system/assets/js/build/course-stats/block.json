{
	"$schema": "https://schemas.wp.org/block.json",
	"apiVersion": 3,
	"name": "masteriyo/course-stats",
	"version": "1.0.0",
	"title": "Course Stats",
	"category": "masteriyo-single-course",
	"description": "",
	"keywords": [
		"Course Stats Block"
	],
	"textdomain": "masteriyo",
	"attributes": {
		"clientId": {
			"type": "string",
			"default": ""
		},
		"blockCSS": {
			"type": "string"
		},
		"courseId": {
			"type": "number"
		},
		"minWidth": {
			"type": "object"
		},
		"fontSize": {
			"type": "object",
			"default": {
				"value": "16",
				"unit": "px"
			}
		},
		"textColor": {
			"type": "string",
			"default": ""
		},
		"enableCourseDuration": {
			"type": "boolean",
			"default": true
		},
		"enableStudentCount": {
			"type": "boolean",
			"default": true
		},
		"enableAvailableSeatsCount": {
			"type": "boolean",
			"default": true
		},
		"enableDateUpdated": {
			"type": "boolean",
			"default": true
		},
		"enableDateStarted": {
			"type": "boolean",
			"default": true
		},
		"layoutOption": {
			"type": "string",
			"default": "grid"
		},
		"selectedCourseId": {
			"type": "number"
		}
	},
	"usesContext": [
		"masteriyo/course_id"
	],
	"supports": {
		"align": false,
		"html": false,
		"color": {
			"background": false,
			"gradient": false,
			"text": false
		}
	},
	"style": "masteriyo-public",
	"editorScript": "masteriyo-blocks",
	"editorStyle": "masteriyo-public"
}
